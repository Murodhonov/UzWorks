<resources>
    <style name="Base.Theme.UzWorks" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="textInputStyle">@style/TextInputEditTextStyle</item>
    </style>

    <style name="Theme.UzWorks" parent="Base.Theme.UzWorks" />

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="textColor">@color/black_blue</item>
        <item name="boxStrokeColor">@color/input_stroke_color</item>
        <item name="hintTextColor">@color/black_blue</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_7sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_7sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_7sdp</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/text_color</item>
    </style>

