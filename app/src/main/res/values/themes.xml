<resources>
    <style name="Base.Theme.UzWorks" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="textInputStyle">@style/TextInputEditTextStyle</item>
        <item name="android:textColor">@color/black_blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.UzWorks" parent="Base.Theme.UzWorks" />

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="editTextStyle">@style/InnerTextInputEditTextStyle</item>
        <item name="boxStrokeColor">@color/input_stroke_color</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/text_color</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InnerTextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black_blue</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/black_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
    </style>

    <style name="SecondaryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black_blue</item>
        <item name="colorOnPrimary">@color/black_blue</item>
    </style>

</resources>