<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".fragments.auth.SignUpFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/registration_background"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="2dp"
            android:src="@drawable/ic_back" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Create an account"
            android:textColor="@color/black_blue"
            android:textSize="25sp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor"
            android:textAlignment="center" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Fullname"
            android:textColor="@color/black_blue" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/full_name_et"
            style="@style/RegistrationEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:elevation="3dp"
            android:hint="fullname"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/full_name_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/error_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_error" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="13sp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Full name should enter"
                android:textColor="@color/red" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Username"
            android:textColor="@color/black_blue" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/username_et"
            style="@style/RegistrationEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:elevation="3dp"
            android:hint="username"
            android:imeOptions="actionNext"
            android:inputType="text" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/username_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/error_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_error" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Username should enter"
                android:textColor="@color/red" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Password"
            android:textColor="@color/black_blue"
            app:layout_constraintLeft_toLeftOf="@id/password_et"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/registration_edit_text_background"
            android:elevation="3dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password_et"
                style="@style/RegistrationEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@color/black_blue_60" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/password_eye_iv"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_closed_eye"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/password_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/error_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_error" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Password should enter"
                android:textColor="@color/red" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Confirm Password"
            android:textColor="@color/black_blue"
            app:layout_constraintLeft_toLeftOf="@id/confirm_password_et"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/registration_edit_text_background"
            android:elevation="3dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/confirm_password_et"
                style="@style/RegistrationEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="confirm Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/black_blue_60" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/confirm_password_eye_iv"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_closed_eye"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/confirm_password_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/error_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_error" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/confirm_password_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="13sp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Confirm password should enter"
                android:textColor="@color/red" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/dmsans_bold"
                android:gravity="center"
                android:text="Continue"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sign_up_with_google_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/white_blue"
            app:cardCornerRadius="7dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_google" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Sign up with Google"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:text="You have already an account?"
                android:textColor="@color/text_color" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sign_in_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/dmsans_regular"
                android:text="Sign in"
                android:textColor="@color/yellow" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>