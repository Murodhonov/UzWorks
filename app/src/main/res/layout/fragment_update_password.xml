<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_blue"
    tools:context=".fragments.main.profile.update_password.UpdatePasswordFragment"
    app:layoutDescription="@xml/fragment_update_password_scene">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/update_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Update Password"
        android:textColor="@color/black_blue"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/update_password_tv">

        <!--        old password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Old Password"
            android:textColor="@color/black_blue"
            app:layout_constraintLeft_toLeftOf="@id/old_password_et"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:elevation="@dimen/_2sdp">

            <EditText
                android:id="@+id/old_password_et"
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="old password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@color/black_blue_60" />

            <ImageView
                android:id="@+id/old_password_eye_iv"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_closed_eye"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/old_password_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/error_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Old password should enter"
                android:textColor="@color/red" />

        </LinearLayout>

        <!--        new password -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:fontFamily="@font/dmsans_bold"
            android:text="New Password"
            android:textColor="@color/black_blue"
            app:layout_constraintLeft_toLeftOf="@id/new_password_et"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:elevation="@dimen/_2sdp">

            <EditText
                android:id="@+id/new_password_et"
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="new password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@color/black_blue_60" />

            <ImageView
                android:id="@+id/new_password_eye_iv"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_closed_eye"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/new_password_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/error_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/dmsans_bold"
                android:text="New password should enter"
                android:textColor="@color/red" />

        </LinearLayout>

        <!--        confirm new password -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Confirm New Password"
            android:textColor="@color/black_blue"
            app:layout_constraintLeft_toLeftOf="@id/confirm_new_password_et"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:elevation="@dimen/_2sdp">

            <EditText
                android:id="@+id/confirm_new_password_et"
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="confirm new password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/black_blue_60" />

            <ImageView
                android:id="@+id/confirm_new_password_eye_iv"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_closed_eye"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/confirm_new_password_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/error_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_password_error_tv"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Confirm new password required"
                android:textColor="@color/red" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_42sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/dmsans_bold"
            android:gravity="center"
            android:text="Update"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.motion.widget.MotionLayout>