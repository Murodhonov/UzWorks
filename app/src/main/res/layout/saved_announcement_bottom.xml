<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_15sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/share_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_23sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:strokeColor="@color/black_blue"
        app:strokeWidth="@dimen/_2sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_23sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/dm_sans_bold"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/share"
            android:textColor="@color/black_blue"
            android:textSize="@dimen/_13ssp"
            app:drawableLeftCompat="@drawable/ic_share" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/see_more_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_23sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:strokeColor="@color/black_blue"
        app:strokeWidth="@dimen/_2sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_23sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/dm_sans_bold"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/see_more"
            android:textColor="@color/black_blue"
            android:textSize="@dimen/_13ssp"
            app:drawableLeftCompat="@drawable/ic_see_more" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_23sdp"
        android:backgroundTint="@color/red"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:strokeColor="@color/red"
        app:strokeWidth="@dimen/_1sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/dm_sans_bold"
            android:paddingStart="@dimen/_23sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/delete"
            android:textColor="@color/black_blue"
            android:textSize="@dimen/_13ssp"
            app:drawableLeftCompat="@drawable/ic_delete_blue" />


    </com.google.android.material.card.MaterialCardView>

