                android:text="- Xushmuomila va yoqimli ovozga ega bo'lishi\n- O'zbek tilida nutqi ravon va mukammal bo'lishi \n- Kirishimli va pozitiv bo'lishi \n- Ishga vaqtida kelishi va ma'suliyatli bo'lishi "
                android:textSize="@dimen/_10ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="#C7C5CF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Ishtimoiy tarmoqlardan ko’rish:"
                android:textColor="@color/black_blue"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/tg_iv"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_telegram" />

                <TextView
                    android:layout_height="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:text="Telegram"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ig_iv"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_instagram" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:text="Instagram"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Xaritada ko’rsatilgan manzil"
                android:textColor="@color/black_blue"
                android:textSize="@dimen/_11ssp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Aloqaga chiqish"
                android:textAlignment="center"
                android:textColor="@color/black_blue"
                android:textSize="@dimen/_15ssp" />

