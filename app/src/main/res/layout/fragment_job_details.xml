<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_11sdp"
    android:background="@color/white"
    tools:context=".fragments.main.jobs.JobDetailsFragment">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_11sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_11sdp"
        android:textSize="@dimen/_11ssp"
        android:text="1 day ago"
        app:layout_constraintBottom_toBottomOf="@id/back_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_btn" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/announcement_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/white_blue"
        android:padding="@dimen/_7sdp"
        app:layout_constraintTop_toBottomOf="@id/back_btn">

        <LinearLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:id="@+id/announcement_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/black_blue"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_7sdp"
                android:src="@drawable/uz_works_logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/announcement_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_bold"
            android:text="CALL-MARKAZGA AYOL-QIZ OPERATORLAR KERAK"
            android:textAlignment="center"
            android:textColor="@color/black_blue"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintLeft_toRightOf="@id/announcement_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/announcement_iv" />

        <TextView
            android:id="@+id/work_type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Ish turi"
            android:textAlignment="center"
            android:textColor="@color/black_blue"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintLeft_toLeftOf="@id/work_type_btn"
            app:layout_constraintRight_toRightOf="@id/work_type_btn"
            app:layout_constraintTop_toBottomOf="@+id/announcement_tv" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/work_type_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/announcement_iv"
            app:layout_constraintTop_toBottomOf="@id/work_type_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:text="Sotuvchilik"
                android:textSize="@dimen/_10ssp" />

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/work_type_btn"
            app:layout_constraintLeft_toRightOf="@id/work_type_btn"
            app:layout_constraintRight_toLeftOf="@id/work_gender_btn"
            app:layout_constraintTop_toTopOf="@id/work_type_tv" />

        <TextView
            android:id="@+id/work_gender_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Jins"
            android:textAlignment="center"
            android:textColor="@color/black_blue"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintLeft_toLeftOf="@id/work_gender_btn"
            app:layout_constraintRight_toRightOf="@id/work_gender_btn"
            app:layout_constraintTop_toBottomOf="@+id/announcement_tv" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/work_gender_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/work_gender_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:text="Ayol"
                android:textSize="@dimen/_10ssp" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

