<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="25dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/black_blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contact_chat_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="7dp"
        app:strokeColor="@color/black_blue"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="30dp"
            android:paddingTop="7dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_contact_by_chat" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Send message"
                android:textColor="@color/black_blue"
                android:textSize="18sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/share_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="7dp"
        app:strokeColor="@color/black_blue"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="30dp"
            android:paddingTop="7dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_share" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Share"
                android:textColor="@color/black_blue"
                android:textSize="18sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/see_more_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="7dp"
        app:strokeColor="@color/black_blue"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="30dp"
            android:paddingTop="7dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_see_more" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="See more"
                android:textColor="@color/black_blue"
                android:textSize="18sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/red"
        app:cardCornerRadius="7dp"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="30dp"
            android:paddingTop="7dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_delete_blue" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Delete"
                android:textColor="@color/black_blue"
                android:textSize="18sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>