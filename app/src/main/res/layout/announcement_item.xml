<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_11sdp"
        android:paddingTop="@dimen/_7sdp"
        android:paddingEnd="@dimen/_11sdp"
        android:paddingBottom="@dimen/_7sdp">

        <ImageView
            android:contentDescription="@string/content_description"
            android:id="@+id/iv"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:src="@drawable/ic_logo_9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintWidth_percent="0.5"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintRight_toLeftOf="@id/save_iv"
            app:layout_constraintBottom_toTopOf="@id/address_tv"
            app:layout_constraintLeft_toRightOf="@id/iv"
            app:layout_constraintTop_toTopOf="@+id/iv" />

        <ImageView
            android:id="@+id/badge_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_badge"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/title_tv"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintLeft_toRightOf="@id/title_tv"
            app:layout_constraintRight_toLeftOf="@id/save_iv"
            app:layout_constraintTop_toTopOf="@id/title_tv" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginStart="@dimen/_7sdp"
            android:singleLine="true"
            android:theme="@style/SecondaryTextStyle"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iv"
            app:layout_constraintLeft_toRightOf="@id/iv"
            app:layout_constraintRight_toLeftOf="@id/save_iv"
            app:layout_constraintTop_toBottomOf="@id/title_tv" />

        <ImageView
            android:contentDescription="@string/content_description"
            android:id="@+id/save_iv"
            android:layout_width="@dimen/_35sdp"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="@id/iv"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintRight_toRightOf="@id/open_work_layout"
            android:src="@drawable/ic_saved"/>

        <TextView
            android:id="@+id/cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv" />

        <TextView
            android:id="@+id/per_time_tv"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:layout_height="wrap_content"
            android:text="@string/salary_per_time"
            android:textColor="@color/yellow"
            app:layout_constraintBottom_toBottomOf="@id/cost_tv"
            app:layout_constraintLeft_toRightOf="@id/cost_tv"
            app:layout_constraintTop_toTopOf="@id/cost_tv" />

        <LinearLayout
            android:id="@+id/gender_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/corner_rectangle_background"
            android:gravity="center"
            android:paddingStart="@dimen/_7sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cost_tv">

            <TextView
                android:id="@+id/gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:theme="@style/SecondaryTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/work_type_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:background="@drawable/corner_rectangle_background"
            android:gravity="center"
            android:paddingStart="@dimen/_7sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintLeft_toRightOf="@id/gender_layout"
            app:layout_constraintTop_toTopOf="@id/gender_layout">

            <TextView
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:theme="@style/SecondaryTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/open_work_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_rectangle_background"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:paddingStart="@dimen/_13sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_13sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintBottom_toBottomOf="@id/gender_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/gender_layout">

            <TextView
                android:id="@+id/open_announcement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view"
                android:theme="@style/SecondaryTextStyle" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>