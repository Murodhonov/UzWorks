<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/about_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_personal_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Ish tajribam"
            android:textColor="@color/black_blue"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/about_image"
            app:layout_constraintLeft_toRightOf="@id/about_image"
            app:layout_constraintTop_toTopOf="@id/about_image" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_experience_btn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#66524B6B"
            android:padding="7.5dp"
            app:layout_constraintBottom_toBottomOf="@id/about_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/about_image">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/black_blue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1.3dp"
            android:layout_marginTop="10dp"
            android:background="#C7C5CF"
            app:layout_constraintTop_toBottomOf="@id/about_image" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/experience_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line"
            tools:listitem="@layout/experience_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>